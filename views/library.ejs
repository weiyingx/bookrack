<h2>The Library</h2>
<h3>Browse the list of recommended books.</h3>

<div class="container-fluid">

<div class="row">

  <div class="col-md-4">
    <form action="#" class="form-inline">
      <div class="form-group">
        <label class="sr-only" for="exampleInputEmail3">Science-Fiction</label>
        <input type="search" class="form-control" id="bookSearch" placeholder="Science Fiction">
      </div>
      <button type="submit" class="btn btn-default">search books</button>
    </form>
  </div>



<div class="col-md-8">
<div>
  <% for (var i = 0; i < books.length; i++) { %>
  <% var book = books[i]; %>
  <div class="booksDisplay">
    <div class="cover">
      <img class="bookCover" src="<%=book.image %>">
    </div>
    <div class="bookDescription">
    <p><strong>Title:</strong> <em><%= book.title %></em></p>
    <p><strong>Author:</strong> <%= book.author %></p>
    <p><strong>Description:</strong> <%= book.description %></p>
    <p><strong>Genre:</strong> <%= book.genre %></p>
    </div>
    <form action="<%= book.link %>" method="get" target="_blank">
      <button class="btn btn-default" type="submit">Locate this book!</button>
    </form>
    <div class="btn-group" role="group">
    <a href="#" class="btn btn-default">Add to Rack</a>
    </div>
  </div>
  <% } %>
</div>
</div>


</div>
</div>
